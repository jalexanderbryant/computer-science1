// Input test file...


#include <stdio.h>
#include <stdlib.h>
#include <string.h>


int main()
{
	char input[2];
	int i;
	char c;
	for(;;){
		printf("Enter a number ");

		if(fgets( input, sizeof(input), stdin))
		{
			i = atoi( input );
			printf("You entered %d\n", i);
			if(i == 5)
				exit(1);	
		}
		c = getchar();
	} 
	return 0;	
}
